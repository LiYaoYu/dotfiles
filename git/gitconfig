[push]
    default = simple
[core]
    editor = nvim
[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    lg = log --decorate
    lt = log --graph --oneline --decorate --all
    ltd = log --graph --decorate --all
    d = difftool
    mt = mergetool
[difftool]
    prompt = false
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = nvim -d "$LOCAL" "$REMOTE"
[commit]
    template = ~/.gitmessage.txt
